<div class="container">
<%= form_with model: @dress do |f| %>
	<div>
		<%= f.label :name %>
		<%= f.text_field :name, required: true %>
	</div>
	<div>
		<%= f.label :color %>
		<%= f.text_field :color %>
	</div>
	<div>
		<%= f.label :size %>
		<%= f.text_field :size %>
	</div>
	<div>
		<%= f.label :price %>
		<%= f.number_field :price, step: :any %>
	</div>
	<div>
		<%= f.label :description %>
		<%= f.text_area :description, cols: 20 %>
	</div>
	<div>
		<%= f.label :dress_img %>
		<%= f.file_field :dress_img %>
	</div>
	<div>
		<%= f.submit "Submit", class: "btn btn-primary" %>
		<%= link_to 'Back', :back, class: "btn btn-secondary" %>
	</div>
<% end %>
</div>